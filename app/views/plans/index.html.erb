<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <p id="notice"><%= notice %></p>

    <h1><%= current_user.login.html_safe %>'s Plans</h1>
    <br />
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th>Name</th>
          <th>Major</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @plans.each do |plan| %>
          <tr>
            <td><%= plan.name %></td>
            <td><%= plan.major.name %></td>
            <td><%= link_to 'Show', plan %></td>
            <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
            <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <a class="btn btn-success btn-block" href="<%= new_plan_path %>">New Plan</a>
  </div>
  <div class="col-md-4"></div>
</div>